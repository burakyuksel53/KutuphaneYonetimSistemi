
@model MvcKutuphane1.Models.Entity.TBLUYELER

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPanelim.cshtml";
}

<div style="margin-top: 40px" class="col-md-6">
    @using (Html.BeginForm("Index2", "Panelim", FormMethod.Post))
    {
    <table class="table table-hover">
        <tr>
            <td>
                <label style="font-weight:bolder">Mail Adresi:</label> @HttpContext.Current.User.Identity.Name
            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bolder">ID</label>
                @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>

                <label style="font-weight:bolder">Ad</label>
                @Html.TextBoxFor(x => x.AD, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>

                <label style="font-weight:bolder">Soyad</label>
                @Html.TextBoxFor(x => x.SOYAD, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>

                <label style="font-weight:bolder">Kullanıcı Adı</label>
                @Html.TextBoxFor(x => x.KULLANICIADI, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>

                <label style="font-weight:bolder">Şifre</label>
                @Html.TextBoxFor(x => x.SIFRE, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>

                <label style="font-weight:bolder">Telefon</label>
                @Html.TextBoxFor(x => x.TELEFON, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bolder">Okul</label>
                @Html.TextBoxFor(x => x.OKUL, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td><button class="btn btn-warning">Bilgileri Güncelle</button> </td>
        </tr>
    </table>
    }
</div>
