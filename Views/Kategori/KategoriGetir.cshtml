@model MvcKutuphane1.Models.Entity.TBLKATEGORI
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kategori Düzenle</h2>


<div class="col-md-6">
    @using (Html.BeginForm("Guncelle", "Kategori", FormMethod.Post))
    {
        <div style="margin-bottom:15px"></div>
        <div class="form-group">
            <label>ID</label>
            @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
            <br />
            <label>Kategori Adı</label>
            @Html.TextBoxFor(k => k.AD, new { @class = "form-control" })
        </div>
        <br />
        <button class="btn btn-default">Kaydet</button>
    }
</div>