
@model MvcKutuphane1.Models.Entity.TBLMESAJLAR

@{
    ViewBag.Title = "YeniMesaj";
    Layout = "~/Views/Shared/_LayoutPanelim.cshtml";
}


<br />
<h2>Yeni Mesaj</h2>
<div class="col-md-6">
    <form class="form-group" method="post">
        <div style="margin-top:15px">
            <label>Alıcı Mail</label>
            @Html.TextBoxFor(x => x.ALICI, new { @class = "form-control" })
        </div>
        <div style="margin-top:15px">
            <label>Konu</label>
            @Html.TextBoxFor(x => x.KONU, new { @class = "form-control" })
        </div>
        <div style="margin-top:15px">
            <label>İçerik</label>
            @Html.TextAreaFor(x => x.ICERIK, new { @class = "form-control" })
        </div>
        <div style="margin-top:15px">
            <button class="btn btn-primary">Gönder</button>
        </div>
    </form>
</div>
