

@using PagedList
@using PagedList.Mvc

@model IPagedList<MvcKutuphane1.Models.Entity.TBLYAZAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Yazar Sayfası</h2>

<table class="table table-striped">
    <tr style="background-color: rgb(252,178,22)">
        <th>Yazar ID</th>
        <th>Yazar Ad</th>
        <th>Yazar Soyad</th>
        <th>Detay</th>
        <th>Sil</th>
        <th>Düzenle</th>
        <th>Yazarın Kitapları</th>
    </tr>
    @foreach (var yzr in Model)
    {
    <tr>
        <td>@yzr.ID</td>
        <td>@yzr.AD</td>
        <td>@yzr.SOYAD</td>
        <td>@yzr.DETAY</td>
        <td>@Html.ActionLink("Sil", "YazarSil", new { id = yzr.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstediğinize Emin Misiniz?')" })</td>
        <td><a href="/Yazar/YazarGetir/@yzr.ID" class="btn btn-warning">Düzenle</a></td>
        <td><a href="/Yazar/YazarKitaplar/@yzr.ID" class="btn btn-primary">Görüntüle</a></td>
    </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/Yazar/YazarEkle" class="btn btn-primary">Yeni Yazar Ekle</a>