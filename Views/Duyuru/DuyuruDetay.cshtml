@model MvcKutuphane1.Models.Entity.TBL_DUYURU
@{
    ViewBag.Title = "DuyuruDetay";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Duyuru Detay Sayfası</h2>
<br />
<div class="col-md-6">
    @using (Html.BeginForm("DuyuruGuncelle", "Duyuru", FormMethod.Post))
    {
        <div style="margin-bottom:15px"></div>
        <div class="form-group">
            <div style="margin-bottom:15px">
                <label>Duyuru ID</label>
                @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
            </div>
            <div style="margin-bottom:15px">
                <label>Duyuru Kategori</label>
                @Html.TextBoxFor(k => k.KATEGORI, new { @class = "form-control" })
            </div>
            <div style="margin-bottom:15px">
                <label>Duyuru Icerik</label>
                @Html.TextAreaFor(k => k.ICERIK, new { @class = "form-control" })
            </div>
        </div>
        <button class="btn btn-warning">Güncelle</button>
    }
</div>